@model SetorViewModel;


<div class="container bg-white p-4 rounded mt-5 col-6">
    <div class="row justify-content-center">
        <!-- Área de Setores -->
        <div class="mb-5 mx-auto">
            <h3 class="text-center">Setores</h3>
            <ul class="list-group mb-3">
                @foreach (var setores in Model.Setores)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.DisplayFor(modelItem => setores.Nome)
                        <span>
                            <button class="text-white btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-fill"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </span>
                    </li>
                }
            </ul>
            <!-- Formulário para cadastrar novo setor -->
            <form asp-action="Create">
                <div class="mb-3">
                    <label for="novoMotivo" class="form-label">Novo setor</label>
                    <input asp-for="NovoSetor.Nome" class="form-control" placeholder="Digite o setor">
                </div>
                <button type="submit" class="btn btn-primary w-100">Cadastrar setor</button>
            </form>
        </div>
    </div>
</div>

          <!-- Área de Complementos -->
            

        <!-- Modal de Confirmação -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirmar Deleção</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Tem certeza que deseja deletar este item?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger">Deletar</button>
                    </div>
                </div>
            </div>
        </div>

            <!--Modal de edicao-->
            <div class="modal fade" id="editSectorModal" tabindex="-1" aria-labelledby="editSectorModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editSectorModalLabel">Editar Nome do Setor</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="mb-3">
                                    <input type="text" class="form-control" id="sectorName" placeholder="Digite o novo nome do setor">
                                </div>
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
