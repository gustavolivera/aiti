<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <title>Enviar Chamado</title>
</head>
<body style="background-color: #a0bac2;">

  <nav class="navbar navbar-light bg-body-tertiary">
    <div class="container-fluid">
        <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
            <i class="bi bi-list" style="font-size: 1.5rem;"></i>
        </button>
        <a class="navbar-brand" href="#">
            <img src="@Url.Content("~/img/logo.png")" width="100" />

            </a>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <i class="bi bi-list m-2" style="font-size: 1.5rem;"></i>
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <!-- Informações do Usuário -->
                <div class="mb-3" id="accordionUserInfo">
                    <div class="accordion-item">
                        <h2 class="accordion-header mb-3" id="headingUserInfo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUserInfo" aria-expanded="false" aria-controls="collapseUserInfo">
                                <h5 class="card-title"><i class="bi bi-person-circle"></i> Nome do Usuário<i class="position-absolute end-0 bi bi-three-dots"></i></h5>
                            </button>
                        </h2>
                        <div id="collapseUserInfo" class="accordion-collapse collapse" aria-labelledby="headingUserInfo" data-bs-parent="#accordionUserInfo">
                            <div class="accordion-body ps-3">

                                <p class="card-text"><i class="bi bi-building"></i> Setor: Nome do Setor</p>
                                <p class="card-text"><i class="bi bi-briefcase"></i> Função: Nome da Função</p>
                                <p class="card-text"><i class="bi bi-telephone"></i> Telefone: (XX) XXXX-XXXX</p>
                                <p class="card-text"><i class="bi bi-envelope"></i> E-mail: usuario@exemplo.com</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Opções de Navegação -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Chamado" asp-action="Index"><i class="bi bi-arrow-left-right"></i> Fluxo de Chamados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Relatorio" asp-action="Index"><i class="bi bi-gear"></i> Gestão de Chamados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Motivo" asp-action="Index"><i class="bi bi-tags"></i> Motivos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Complemento" asp-action="Index"><i class="bi bi-patch-plus"></i> Complementos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Pessoa" asp-action="Index"><i class="bi bi-person-add"></i> Pessoas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Setor" asp-action="Index"><i class="bi bi-building-gear"></i> Setores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Funcao" asp-action="Index"><i class="bi bi-person-badge"></i> Funções</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="Pessoa" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
