@model Domain.Domain.Complemento;

 <div class="col-md-6 mb-5">
                <h3>Complementos</h3>
                <ul class="list-group mb-3">
                    <!-- Exemplo de item da lista -->
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Complemento 1
                        <span>
                            <button class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-fill"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Complemento 2
                        <span>
                            <button class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-fill"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Complemento 3
                        <span>
                            <button class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-fill"></i>
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </span>
                    </li>
                </ul>
                <!-- Formulário para cadastrar novo complemento -->
                <form asp-action="Create">
                    <div class="mb-3">
                        <label for="selectMotivo" class="form-label">Selecione o Motivo</label>
                        <select asp-for="MotivoId" asp-items="@ViewBag.Motivos" class="form-select" id="selectMotivo">
                            <option>Escolha...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="novoComplemento" class="form-label">Novo Complemento</label>
                        <input asp-for="Nome" type="text" class="form-control" id="novoComplemento" placeholder="Digite o complemento">
                    </div>
                    <button type="submit" class="btn btn-primary">Cadastrar Complemento</button>
                </form>
            </div>
        </div>